<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assesment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/bgquiz">

        <TextView
            android:layout_marginTop="159dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="QUIZ"

            android:textColor="@color/purple"
            android:textSize="50dp" />

        <TextView
            android:layout_marginTop="175dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question:"
            android:textSize="15dp"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the capital of India?"
            android:textSize="23dp"
            android:textAlignment="center"/>

            <Button
                android:layout_gravity="center_horizontal"

                android:layout_width="350dp"
                

                android:id="@+id/option1answer"
                android:layout_height="wrap_content"
                android:text="kolkata"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/option2answer"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="mumbai"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/option3answer"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="delhi"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/option4answer"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="lucknow"
                android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:layout_marginEnd="40dp">
            <Button
                android:id="@+id/quizroute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="27dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/roundbutton"


                android:text="Go to another quiz"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <Button
                android:id="@+id/RestrartButton"
                android:layout_width="120dp"
                android:layout_marginStart="10dp"

                android:layout_height="match_parent"

                android:layout_marginTop="0dp"
                android:background="@drawable/roundbutton"
                android:text="RESTART" />



        </LinearLayout>



    </LinearLayout>


</FrameLayout>